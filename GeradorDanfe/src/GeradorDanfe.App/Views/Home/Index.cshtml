@{
    ViewData["Title"] = "Gerador de DANFE";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 15px;">

        <div class="text-center mb-4">
            <h2 class="fw-bold">📄 Gerador de DANFE</h2>
            <p class="text-muted">Envie o XML e gere o PDF em segundos</p>
        </div>

        <form asp-action="GerarDanfe" asp-controller="Home" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label fw-semibold">Tipo de Documento</label>
                <select name="documentType" class="form-select form-select-lg" required>
                    <option value="">Selecione...</option>
                    <option value="NFe">NF-e</option>
                    <option value="NFCe">NFC-e</option>
                </select>
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Arquivo XML</label>
                <input type="file" name="file" class="form-control form-control-lg" accept=".xml" required />
                <div class="form-text">Apenas arquivos .xml são permitidos.</div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                    🚀 Gerar PDF
                </button>
            </div>
        </form>
    </div>
</div>
