@{
    ViewData["Title"] = "Gerador de DANFE";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 500px; border-radius: 14px;">

        <div class="text-center mb-4">
            <h2 class="fw-bold">📄 Gerador de DANFE</h2>
            <p class="text-muted">
                Envie o XML da NF-e e gere o PDF automaticamente
            </p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["Error"]
            </div>
        }

        <form asp-action="GerarDanfe"
              asp-controller="Home"
              method="post"
              enctype="multipart/form-data">

            <div class="mb-4">
                <label class="form-label fw-semibold">Arquivo XML</label>
                <input type="file"
                       name="file"
                       class="form-control form-control-lg"
                       accept=".xml"
                       required />
                <div class="form-text">
                    Informe o XML de uma NF-e (modelo 55)
                </div>
            </div>

            <div class="d-grid">
                <button type="submit"
                        class="btn btn-primary btn-lg rounded-pill">
                    🚀 Gerar PDF
                </button>
            </div>
        </form>
    </div>
</div>
